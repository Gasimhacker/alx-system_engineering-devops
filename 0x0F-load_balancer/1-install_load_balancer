#!/usr/bin/env bash
# Configure haproxy to work as a load balancer for two servers
apt-get -y update
sudo apt-get -y install haproxy

backend="
backend web-backend
   balance roundrobin
   server 480531-web-01 100.24.240.126:80 check
   server 480531-web-02 54.157.134.215:80 check"
frontend="
frontend http
   bind *:80
   mode http

   default_backend web-backend"
echo "$frontend" | sudo tee -a /etc/haproxy/haproxy.cfg
echo "$backend" | sudo tee -a /etc/haproxy/haproxy.cfg
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy
sudo service haproxy restart
